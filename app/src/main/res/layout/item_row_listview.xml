<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:id="@+id/imageViewappLogo" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewappLogo"
        android:layout_toRightOf="@+id/imageViewappLogo"
        android:layout_toEndOf="@+id/imageViewappLogo"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:id="@+id/textViewappName" />

    <TextView
        android:text="@string/label_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewappName"
        android:layout_alignLeft="@+id/textViewappName"
        android:layout_alignStart="@+id/textViewappName"
        android:id="@+id/textViewappPrice"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewappPrice"
        android:layout_alignLeft="@+id/textViewappPrice"
        android:layout_alignStart="@+id/textViewappPrice"
        android:id="@+id/imageViewappPrice"
        android:layout_marginTop="8dp" />

</RelativeLayout>